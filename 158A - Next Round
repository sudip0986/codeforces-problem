#include <stdio.h>
int main()
{
    int n;
    scanf("%d",&n);

    int k;
    scanf("%d",&k);
    int next =0;
    int arr[n];
    for(int i=0; i<n; i++)
    scanf("%d", &arr[i]);
    
    for(int i=0; i<n; i++)
    {
        if(arr[i]>0)
        {
        if(arr[i]>=arr[k-1] )
         next ++ ;
        }
    }

    printf("%d",next); 
}
