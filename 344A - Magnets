#include <iostream>
using namespace std;

int main()
{
    int m;
    cin>>m;
    int count=0;
    int temp;
    for(int i=1; i<=m; i++)
    {
        int position;
        cin>>position;
        if(temp!=position)
        count++;
        
        temp=position;
        
    }
    
    
    cout<<count;
}
